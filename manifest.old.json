{
  "manifest_version": 3,
  "name": "Leboncoin Plus",
  "description": "Shows the first publication date of ads.",
  "version": "1.0",
  "author": "CÃ©dric Mourgeon",

  "action": {},
  "icons": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "webRequest", "scripting"],
  "host_permissions": ["https://www.leboncoin.fr/*"],
  "content_scripts": [{
    "matches": ["https://*.leboncoin.fr/*"],
    "run_at": "document_idle",
    "js": ["content.js"]
  }],
  "web_accessible_resources": [{
    "resources": ["leboncoin-plus.js"],
    "matches": ["https://*.leboncoin.fr/*"]
  }]
}
