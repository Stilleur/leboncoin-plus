{
  "manifest_version": 3,
  "name": "Leboncoin Plus",
  "description": "Affiche la date de première publication des annonces.",
  "version": "1.0",
  "author": "Cédric Mourgeon",

  "action": {},
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting"],
  "host_permissions": ["https://www.leboncoin.fr/*"],
  "web_accessible_resources": [{
    "resources": ["leboncoin-plus.js"],
    "matches": ["https://www.leboncoin.fr/*"]
  }]
}
